// Setup Defaults
normalize-css()
border-box-html()



/* Framework */
@require '/framework/index'

/* App Styles */
full-viewport()
  width 100vw
  height 100vh

body
  background-color theme_bg
  font-size font_size
  font-family font_stack
  line-height line_height

  color theme_font
  full-viewport()

  #root
    full-viewport()

  #app-header
    absolute top left right
    z-index z5
    height header_height

  #app-content
    padding-top header_height
    absolute top left right bottom
    z-index z0
    overflow hidden
    transition()

  #app-sidebar
    width sidebar_width
    absolute top left (-1*sidebar_width) bottom
    z-index z6
    opacity 0.6
    flex-vertical()
    transition left time_2x ease
    &.is-active
      left 0
      opacity 1