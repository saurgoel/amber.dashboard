// @import '~font-awesome/css/font-awesome.css'
@import '~materialize-css/dist/css/materialize.css'

// Setup Defaults
global-reset()
html
  box-sizing border-box
*, *:before, *:after
  box-sizing inherit

body
	background-color theme_bg
	font-size font_size
	font-family font_stack
	line-height line_height
		
	color theme_font

	absolute top left right bottom
	overflow hidden
	
	#root
		absolute top left right bottom
		flex-vertical()
		
	#app-header
		fixed top left right
		z-index z4
		flex-basis header_height
		flex-horizontal()
		
	#app-content
		flex 1
		flex-container column
		padding-top header_height
		overflow-y auto
		transition()
	
	#app-sidebar
		width sidebar_width
		fixed top left (-1*sidebar_width) bottom
		z-index z6
		flex-vertical()
		transition()
		&.is-active
			left 0
		&.is-active ~ #app-content
			margin-left sidebar_width
		&.is-active .sidebar-backdrop
			display block
	

// Default Link Styles
a[href]
	text-decoration none
	color inherit
	display inline-block
	&:hover, &:active, &:focus
		color inherit