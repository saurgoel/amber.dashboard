:local(.self)
  background-color theme_widget
  border 1px theme_border solid
  padding 8px gutter_x
  margin-bottom 12px

  border-radius 2px

  font-weight normal
  color theme_font

  cursor pointer

  &:hover, &:active, &.is-active
    color #fff
  &:hover
    background-color rgba(#000, 0.1)

  &:active, &.is-active
    background-color rgba(color_base, 0.72)
    font-weight 400