include /mixins/icon.jade
include /mixins/dropdown.jade


.main-header
	#sidebar-toggle
		+Icon('navigation-menu')
	#brand-logo
		img.responsive-img(src='/public/white-logo.png')
	.service-selector
		+SimpleDropdown(selectedService, 'flat')
			each panel in panelsList
				li
					a(href= panel.route) #{panel.name}

	.header-spacer

	ul.navigation
		li
			a(href='#/') Home
		li
			a(href='#/dashboard') Dashboard

.sub-header
	span.sub-header-title #{selectedService || 'Title'}
	#region-sub-header