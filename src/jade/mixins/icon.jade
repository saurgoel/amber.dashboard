mixin Icon(icon_name)
	//- i(class='mdi-#{icon_name}')&attributes(attributes)
	i(class='fa fa-#{icon_name}')&attributes(attributes)

mixin IconWithText(icon_name, text, icon_align)
	- icon_align = icon_align || 'left';
	if icon_align == 'left'
		+Icon(icon_name)
		span.icon-text #{text}
	else
		span.icon-text #{text}
		+Icon(icon_name)